<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QLSV.Main_Lop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="3dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            app:srcCompat="@drawable/fpt" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/logo"
            android:layout_marginTop="34dp"
            android:paddingLeft="30dp"
            android:text="Danh Sách Lớp"
            android:textColor="#3F51B5"
            android:textSize="30dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnAddL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@id/txt1"
            android:backgroundTint="#C8009688"
            android:text="Thêm"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="45dp"
            android:background="#FFFFFF"
            android:text="MÃ LỚP"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@id/txt3"
            android:background="#FFFFFF"
            android:text="TÊN LỚP"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lvClass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/txt2"

            android:layout_marginTop="1dp"></ListView>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>