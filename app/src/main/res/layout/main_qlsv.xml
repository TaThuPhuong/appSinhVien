<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QLSV.Main_QLSV">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="352dp"
        android:layout_height="123dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095"
        app:srcCompat="@drawable/fpt" />

    <Button
        android:id="@+id/btnSV"
        android:layout_width="163dp"
        android:layout_height="67dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="108dp"
        android:backgroundTint="#05D1BE"
        android:drawableRight="@drawable/outline_school_black_24dp"
        android:drawableTint="#EC5454"
        android:text="Sinh Viên"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Mời bạn chọn chức năng"
        android:textColor="#FF3021"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/btnLop"
        android:layout_width="163dp"
        android:layout_height="67dp"
        android:layout_marginTop="108dp"
        android:backgroundTint="#05D1BE"
        android:drawableLeft="@drawable/outline_event_note_black_24dp"
        android:drawableTint="#EC5454"
        android:text="Lớp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toEndOf="@+id/btnSV"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>