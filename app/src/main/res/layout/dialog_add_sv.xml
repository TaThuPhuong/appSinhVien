<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#009688"
            android:gravity="center"
            android:padding="5dp"
            android:text="THÊM SINH VIÊN"
            android:textColor="#EAEAEA"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/AddMa"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Nhập Mã SV"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/AddTen"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Nhập Tên SV"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/AddGt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Nhập Nam hoặc Nữ"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/AddSdt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Nhập SDT SV"
            android:inputType="phone" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Mời bạn chọn lớp"/>
        <Spinner
            android:id="@+id/SpinL"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="70dp"/>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnXoaTrang"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:backgroundTint="#C8009688"
                android:text="Xóa trắng"
                android:textSize="16sp"
                app:cornerRadius="5dp"
                android:layout_marginLeft="40dp"
                />

            <Button
                android:id="@+id/BtnAddSV"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:backgroundTint="#C8009688"
                android:text="Thêm"
                android:textSize="16sp"
                app:cornerRadius="7dp"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>